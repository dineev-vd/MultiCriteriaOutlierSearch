@if (ForTable.GetLength(0) > 1)
{
    <div class="table-responsive" id="value-table">
        <table class="table">
            <thead>
            <tr>
                @for (int i = 0; i < ForTable.GetLength(1); i++)
                {
                    <th>@ForTable[0, i]</th>
                }
            </tr>
            </thead>
            <tbody>
            @for (int i = 1; i < ForTable.GetLength(0); i++)
            {
                <tr>
                    @for (int j = 0; j < ForTable.GetLength(1); j++)
                    {
                        <td>@ForTable[i,j]</td>
                    }
                </tr>
            }
            </tbody>
        </table>
    </div>
}

@namespace OutliersApp.Components

@code
{

    [Parameter]
    public string[,] ForTable { get; set; }

}